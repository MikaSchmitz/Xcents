<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xcents.App">
    <Application.Resources>
        <!-- Colors -->
        <Color x:Key="AppBackgroundColor">#000000</Color>
        <Color x:Key="PanelBackgroundColor">#171717</Color>
        <Color x:Key="ThemeColor">#357960</Color> <!-- amazon -->
        
        <!-- classes -->
        <Style TargetType="Label"
               Class="GridNameExpense">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Body"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
        </Style>

        <Style TargetType="Label"
               Class="GridDateExpense">
            <Setter Property="FontSize" Value="Body"/>
            <Setter Property="HorizontalOptions" Value="End"/>
        </Style>

        <Style TargetType="Label"
               Class="GridCostExpense">
            <Setter Property="FontSize" Value="Body"/>
            <Setter Property="HorizontalOptions" Value="End"/>
        </Style>

        <Style TargetType="Frame"
               x:Key="DetailsFullFrame">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BackgroundColor" Value="{x:StaticResource PanelBackgroundColor}"/>
        </Style>


    </Application.Resources>
</Application>